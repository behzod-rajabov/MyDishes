<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/orqa"
    tools:context=".AboutFragment">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="16dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="Dastur haqida "
                android:textSize="20dp" />

            <ImageView
                android:layout_marginTop="16dp"
                android:src="@drawable/logo"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp" />

            <TextView
                android:padding="8dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Mening pishiriqlarim v.1.0"
                android:textSize="20dp" />

            <TextView
                android:padding="8dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:textStyle="italic"
                android:text="Ushbu Mening pishiriqlarim dasturi mobil telefonda har xil turdagi pishiriqlar retseplarini saqlash va ularni boshqarishni qulaylashtirish maqsadida yaratildi. "
                android:textSize="20dp" />

            <View
                android:layout_width="match_parent"
                android:background="@color/orqa"
                android:layout_margin="8dp"
                android:layout_height="1dp"/>

            <TextView
                android:padding="8dp"
                android:textStyle="italic"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="Created By iC0der"
                android:textSize="20dp" />

            <TextView
                android:padding="8dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="(c) 2019 | Xorazm viloyati"
                android:textSize="20dp" />





        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.v4.widget.NestedScrollView>