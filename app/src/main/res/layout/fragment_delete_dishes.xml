<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".DeleteDishesFragment">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:padding="8dp"
            
            android:text="Ovqatni o'chirish"
            android:gravity="center"
            android:textSize="18dp"
            />


    <EditText
        android:id="@+id/delete_dishes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="@drawable/polya"
        android:hint="Delete_Dishes_id"
        android:inputType="number"
         />
    <Button
        android:id="@+id/delete_dishes_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:background="@drawable/button"
        android:text="Delete dishes" />


    </LinearLayout>
    </android.support.v7.widget.CardView>

    </LinearLayout>